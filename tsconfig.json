{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"lib": ["es2019", "dom"],
		"outDir": "./dist/",
		"jsx": "react",
		"moduleResolution": "node",
		"rootDirs": ["src"],
		"baseUrl": "src",
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"paths": {
			"utils": ["utils"],
			"hoooks": ["hoooks"],
			"types": ["types"]
		},
	},
	"files": ["./src/index.tsx", "global.d.ts"],
	"include": ["src", "jest"],
	"exclude": ["node_modules", ".test."]
}